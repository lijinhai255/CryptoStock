{
  "name": "metanode-stake",
  "version": "1.0.0",
  "description": "Metanode质押智能合约项目",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "node": "hardhat node",
    "deploy:stock:sepolia": "hardhat run scripts/deploy-stock-sepolia.js --network sepolia && npm run extract-abi",
    "deploy:aave:sepolia": "hardhat run scripts/deploy-aave-adapter.js --network sepolia",
    "deploy:defi:sepolia": "hardhat run scripts/deploy-defi-system.js --network sepolia",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "verify": "hardhat verify",
    "extract-abi": "node scripts/extract-abi.js",
    "build": "npm run compile && npm run extract-abi",
    "deploy:infrastructure:sepolia": "hardhat run scripts/deploy-defi-infrastructure.js --network sepolia",
    "deploy:aave-adapter:sepolia": "hardhat run scripts/deploy-aave-adapter-only.js --network sepolia",
    "deploy:compound-adapter:sepolia": "hardhat run scripts/deploy-compound-adapter-only.js --network sepolia",
    "deploy:curve-adapter:sepolia": "hardhat run scripts/deploy-curve-adapter-only.js --network sepolia",
    "deploy:pancake-adapter:sepolia": "hardhat run scripts/deploy-pancake-adapter-only.js --network sepolia",
    "deploy:uniswapv3-adapter:sepolia": "hardhat run scripts/deploy-uniswapv3-adapter-only.js --network sepolia",
    "deploy:yearnv3-adapter:sepolia": "hardhat run scripts/deploy-yearnv3-adapter-only.js --network sepolia",
    "deploy:all-adapters:sepolia": "npm run deploy:infrastructure:sepolia && npm run deploy:aave-adapter:sepolia && npm run deploy:compound-adapter:sepolia && npm run deploy:curve-adapter:sepolia && npm run deploy:pancake-adapter:sepolia && npm run deploy:uniswapv3-adapter:sepolia && npm run deploy:yearnv3-adapter:sepolia",
    "deploy:redstone:sepolia": "hardhat run scripts/deploy-redstone-oracle.js --network sepolia",
    "deploy:mock-redstone:sepolia": "hardhat run scripts/deploy-mock-redstone.js --network sepolia",
    "test:redstone:sepolia": "hardhat test test/redstone-sepolia.test.js --network sepolia",
    "test:tsla:sepolia": "hardhat test test/tsla-simple.test.js --network sepolia",
    "test:mock-tsla:sepolia": "hardhat test test/mock-tsla.test.js --network sepolia",
    "verify:redstone:sepolia": "echo 'Please run: npx hardhat verify --network sepolia <CONTRACT_ADDRESS>'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.7",
    "dotenv": "^17.2.1",
    "ethers": "^6.15.0",
    "hardhat": "^2.19.5",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "staking",
    "metanode"
  ],
  "author": "Metanode Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "@pythnetwork/client": "^2.22.1",
    "@pythnetwork/pyth-sdk-solidity": "^4.2.0",
    "@redstone-finance/evm-connector": "^0.9.0",
    "@redstone-finance/sdk": "^0.5.4",
    "axios": "^1.12.2",
    "ethers-v5": "npm:ethers@^5.8.0"
  }
}
